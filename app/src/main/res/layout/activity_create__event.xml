<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/material_blue_grey_800"
    tools:context="com.example.marco.lift.Activity.Create_Event"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="316dp"
        android:orientation="vertical"
        android:layout_weight="0.56"
        android:gravity="center">

        <EditText
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="EventName" />

        <DatePicker
        android:layout_margin="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EventDatePicker"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:calendarTextColor="#FFF"
        android:calendarViewShown="false"
        android:scaleX="0.8"
        android:scaleY="0.8"/>

        <TimePicker
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EventTimePicker"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:numbersTextColor="#FFF"
            android:scaleX="0.8"
            android:scaleY="0.8"/>

    </LinearLayout>

    <Button
        android:gravity="center"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="Create Workout!"
        android:id="@+id/create_event_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
